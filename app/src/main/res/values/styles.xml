<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--  All customizations that are NOT specific to a particular API-level can go here.
     -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--  Material Design的ActionBar策略
     -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <!--  Material Design-->
        <item name="colorPrimary">@color/theme_material_accent</item>
        <item name="colorPrimaryDark">@color/theme_material_accent</item>
        <item name="colorAccent">@color/theme_material_accent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:editTextStyle">@style/CommonEditTextStyle</item>
        <!--所有activity的背景为null，减少OverDraw；若需要背景，由各activity自己设置-->
    </style>

    <style name="CommonEditTextStyle" parent="Widget.AppCompat.EditText"/>

</resources>
