<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--  All customizations that are NOT specific to a particular API-level can go here.
     -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--  Material Design的ActionBar策略
     -->
        <item name="android:windowNoTitle">true</item>
        <!--  Material Design-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/theme_material_accent</item>
        <item name="colorPrimaryDark">@color/theme_material_accent</item>
        <item name="colorAccent">@color/theme_material_accent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:editTextStyle">@style/CommonEditTextStyle</item>
        <!--所有activity的背景为null，减少OverDraw；若需要背景，由各activity自己设置-->
    </style>

    <style name="CommonEditTextStyle" parent="Widget.AppCompat.EditText"/>

    <style name="CommonLineHorizontal">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/common_bg_line_1px</item>
    </style>

    <style name="CommonLineVertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:background">@color/common_bg_line_1px</item>
    </style>

    <style name="indicator_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/common_text_size_sp16</item>
        <item name="android:textColor">@color/common_text_color_zs2_secondary</item>
    </style>

</resources>
