<resources>
    <!--  Base application theme.
  -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!--  Customize your theme here.
      -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--  Material Design的ActionBar策略
     -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <!--  Material Design -->
        <item name="colorPrimary">@color/theme_material_accent</item>
        <item name="colorPrimaryDark">@color/theme_material_accent</item>
        <item name="colorAccent">@color/theme_material_accent</item>
        <item name="android:windowBackground">@null</item><!--所有activity的背景为null，减少OverDraw；若需要背景，由各activity自己设置-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

</resources>