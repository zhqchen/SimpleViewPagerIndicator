<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhqchen.viewpager">

    <application
        android:allowBackup="true"
        android:name=".SimpleIndicatorApplication"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.zhqchen.viewpager.ui.MainChooseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.TitleViewPagerActivity"/>
        <activity android:name=".ui.IconsViewPagerActivity"/>
    </application>

</manifest>
